{
    "require": {
        "php": "^8.0"
    },
    "require-dev": {
        "phparkitect/phparkitect": "^0.3.33"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "php-http/discovery": true
        }
    },
    "scripts": {
        "arkitect": "vendor/bin/phparkitect check --config=arkitect.php "
    }
}